<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.promotion.mapper.CtActivityMapper">
    
    <resultMap type="CtActivity" id="CtActivityResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="activityName"    column="activity_name"    />
        <result property="activityContent"    column="activity_content"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="usedAmount"    column="used_amount"    />
        <result property="sourceType"    column="source_type"    />
        <result property="termType"    column="term_type"    />
        <result property="hasTimeInterval"    column="has_time_interval"    />
        <result property="isEnable"    column="is_enable"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="timeInterval"    column="time_interval"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="remark"    column="remark"    />
        <result property="createDate"    column="create_date"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCtActivityVo">
        select id, user_id, activity_name, activity_content, total_amount, used_amount, source_type, term_type, has_time_interval, is_enable, del_flag, time_interval, start_time, end_time, remark, create_date, create_time, update_time from ct_activity
    </sql>

    <select id="selectCtActivityList" parameterType="CtActivity" resultMap="CtActivityResult">
        <include refid="selectCtActivityVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="activityName != null  and activityName != ''"> and activity_name like concat('%', #{activityName}, '%')</if>
            <if test="activityContent != null  and activityContent != ''"> and activity_content = #{activityContent}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="usedAmount != null "> and used_amount = #{usedAmount}</if>
            <if test="sourceType != null  and sourceType != ''"> and source_type = #{sourceType}</if>
            <if test="termType != null  and termType != ''"> and term_type = #{termType}</if>
            <if test="hasTimeInterval != null  and hasTimeInterval != ''"> and has_time_interval = #{hasTimeInterval}</if>
            <if test="isEnable != null  and isEnable != ''"> and is_enable = #{isEnable}</if>
            <if test="timeInterval != null  and timeInterval != ''"> and time_interval = #{timeInterval}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="createDate != null "> and create_date = #{createDate}</if>
        </where>
    </select>
    
    <select id="selectCtActivityById" parameterType="String" resultMap="CtActivityResult">
        <include refid="selectCtActivityVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCtActivity" parameterType="CtActivity">
        insert into ct_activity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="activityName != null">activity_name,</if>
            <if test="activityContent != null">activity_content,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="usedAmount != null">used_amount,</if>
            <if test="sourceType != null and sourceType != ''">source_type,</if>
            <if test="termType != null and termType != ''">term_type,</if>
            <if test="hasTimeInterval != null and hasTimeInterval != ''">has_time_interval,</if>
            <if test="isEnable != null and isEnable != ''">is_enable,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="timeInterval != null">time_interval,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="remark != null">remark,</if>
            <if test="createDate != null">create_date,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="activityName != null">#{activityName},</if>
            <if test="activityContent != null">#{activityContent},</if>
            <if test="totalAmount != null">#{totalAmount},</if>
            <if test="usedAmount != null">#{usedAmount},</if>
            <if test="sourceType != null and sourceType != ''">#{sourceType},</if>
            <if test="termType != null and termType != ''">#{termType},</if>
            <if test="hasTimeInterval != null and hasTimeInterval != ''">#{hasTimeInterval},</if>
            <if test="isEnable != null and isEnable != ''">#{isEnable},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="timeInterval != null">#{timeInterval},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createDate != null">#{createDate},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCtActivity" parameterType="CtActivity">
        update ct_activity
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="activityName != null">activity_name = #{activityName},</if>
            <if test="activityContent != null">activity_content = #{activityContent},</if>
            <if test="totalAmount != null">total_amount = #{totalAmount},</if>
            <if test="usedAmount != null">used_amount = #{usedAmount},</if>
            <if test="sourceType != null and sourceType != ''">source_type = #{sourceType},</if>
            <if test="termType != null and termType != ''">term_type = #{termType},</if>
            <if test="hasTimeInterval != null and hasTimeInterval != ''">has_time_interval = #{hasTimeInterval},</if>
            <if test="isEnable != null and isEnable != ''">is_enable = #{isEnable},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="timeInterval != null">time_interval = #{timeInterval},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtActivityById" parameterType="String">
        delete from ct_activity where id = #{id}
    </delete>

    <delete id="deleteCtActivityByIds" parameterType="String">
        delete from ct_activity where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.account.mapper.CtAgentCommissionMapper">
    <sql id="selectCtAgentCommissionVo">
        select *
    </sql>

    <select id="selectCtAgentCommissionList" parameterType="CtAgentCommission" resultMap="CtAgentCommissionResult">
        <include refid="selectCtAgentCommissionVo"/>
        <where>  
            <if test="id != null  and id != ''"> and id = #{id}</if>
            and del_flag = '0'
        </where>
    </select>
    
    <select id="selectCtAgentCommissionById" parameterType="String" resultMap="CtAgentCommissionResult">
        <include refid="selectCtAgentCommissionVo"/>
        where user_id = #{id}
    </select>
        
    <insert id="insertCtAgentCommission" parameterType="CtAgentCommission">
        insert into ct_agent_commission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="parentUserId != null">parent_user_id,</if>
            <if test="costPrice != null">cost_price,</if>
            <if test="operator != null">operator,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createDate != null">create_date,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="parentUserId != null">#{parentUserId},</if>
            <if test="costPrice != null">#{costPrice</if>
            <if test="operator != null">#{operator},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createDate != null">#{createDate},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCtAgentCommission" parameterType="CtAgentCommission">
        update ct_agent_commission
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentUserId != null">parent_user_id = #{parentUserId},</if>
            <if test="costPrice != null">cost_price = #{costPrice</if>
            <if test="operator != null">operator = #{operator},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtAgentCommissionById" parameterType="String">
        update ct_agent_commission
        set del_flag = '1'
        where id = #{id}
    </delete>

    <delete id="deleteCtAgentCommissionByIds" parameterType="String">
        update ct_agent_commission
        set del_flag = '1'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

    <sql id="selectCtUserVo">
        select id,
               user_code,
               account,
               password,
               wx_open_id,
               mobile,
               money_amount,
               score_amount,
               credit_score,
               nick_name,
               real_name,
               sex,
               birthday,
               is_real,
               violation_count,
               id_no,
               is_agent,
               is_shop_boss,
               last_login_ip,
               last_login_time,
               create_boss_time,
               create_agent_time,
               agent_state,
               agent_type,
               boss_state,
               customer_state,
               operator,
               create_date,
               create_time,
               update_time,
               del_flag
        from ct_user
    </sql>

    <select id="selectCtUserList" parameterType="CtUser" resultMap="CtUserResult">
        <include refid="selectCtUserVo"/>
        <where>
            <if test="userCode != null  and userCode != ''">and user_code = #{userCode}</if>
            <if test="account != null  and account != ''">and account = #{account}</if>
            <if test="password != null  and password != ''">and password = #{password}</if>
            <if test="wxOpenId != null  and wxOpenId != ''">and wx_open_id = #{wxOpenId}</if>
            <if test="mobile != null  and mobile != ''">and mobile = #{mobile}</if>
            <if test="realName != null  and realName != ''">and real_name like concat('%', #{realName}, '%')</if>
            <if test="sex != null  and sex != ''">and sex = #{sex}</if>
            <if test="birthday != null ">and birthday = #{birthday}</if>
            <if test="isReal != null  and isReal != ''">and is_real = #{isReal}</if>
            <if test="violationCount != null ">and violation_count = #{violationCount}</if>
            <if test="isAgent != null  and isAgent != ''">and is_agent = #{isAgent}</if>
            <if test="isShopBoss != null  and isShopBoss != ''">and is_shop_boss = #{isShopBoss}</if>
            <if test="agentState != null  and agentState != ''">and agent_state = #{agentState}</if>
            <if test="agentType != null  and agentType != ''">and agent_type = #{agentType}</if>
            <if test="bossState != null  and bossState != ''">and boss_state = #{bossState}</if>
            <if test="customerState != null  and customerState != ''">and customer_state = #{customerState}</if>
            <if test="operator != null  and operator != ''">and operator = #{operator}</if>
            <if test="createDate != null ">and create_date = #{createDate}</if>
        </where>
    </select>

    <select id="selectCtUserById" parameterType="Long" resultMap="CtUserResult">
        <include refid="selectCtUserVo"/>
        where id = #{id}
    </select>

    <select id="selectCtUserByAccount" parameterType="String" resultMap="CtUserResult">
        <include refid="selectCtUserVo"/>
        where account = #{account}
    </select>

    <select id="selectCtUserByUserCode" parameterType="String" resultMap="CtUserResult">
        <include refid="selectCtUserVo"/>
        where user_code = #{userCode}
    </select>



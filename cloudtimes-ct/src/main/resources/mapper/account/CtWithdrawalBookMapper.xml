<mapper namespace="com.cloudtimes.account.mapper.CtWithdrawalBookMapper">
    <sql id="selectCtWithdrawalBookVo">
        select * from ct_withdrawal_book
    </sql>

    <select id="selectCtWithdrawalBookList" parameterType="CtWithdrawalBook" resultMap="CtWithdrawalBookResult">
        <include refid="selectCtWithdrawalBookVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="userType != null  and userType != ''"> and user_type = #{userType}</if>
            <if test="payState != null  and payState != ''"> and pay_state = #{payState}</if>
            <if test="applyDate != null "> and apply_date = #{applyDate}</if>
            and del_flag = '0'
        </where>
    </select>
    
    <select id="selectCtWithdrawalBookById" parameterType="String" resultMap="CtWithdrawalBookResult">
        <include refid="selectCtWithdrawalBookVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCtWithdrawalBook" parameterType="CtWithdrawalBook">
        insert into ct_withdrawal_book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="userType != null and userType != ''">user_type,</if>
            <if test="amount != null">amount,</if>
            <if test="paySerial != null">pay_serial,</if>
            <if test="thirdSerial != null">third_serial,</if>
            <if test="payState != null and payState != ''">pay_state,</if>
            <if test="remark != null">remark,</if>
            <if test="applyDate != null">apply_date,</if>
            <if test="payDate != null">pay_date,</if>
            <if test="payTime != null">pay_time,</if>
            <if test="operator != null">operator,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="userType != null and userType != ''">#{userType},</if>
            <if test="amount != null">#{amount},</if>
            <if test="paySerial != null">#{paySerial},</if>
            <if test="thirdSerial != null">#{thirdSerial},</if>

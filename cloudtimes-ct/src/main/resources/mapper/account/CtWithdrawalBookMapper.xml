            <if test="remark != null">#{remark},</if>
            <if test="applyDate != null">#{applyDate},</if>
            <if test="payDate != null">#{payDate},</if>
            <if test="payTime != null">#{payTime},</if>
            <if test="operator != null">#{operator},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateCtWithdrawalBook" parameterType="CtWithdrawalBook">
        update ct_withdrawal_book
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="userType != null and userType != ''">user_type = #{userType},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="paySerial != null">pay_serial = #{paySerial},</if>
            <if test="thirdSerial != null">third_serial = #{thirdSerial},</if>
            <if test="payState != null and payState != ''">pay_state = #{payState},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="applyDate != null">apply_date = #{applyDate},</if>
            <if test="payDate != null">pay_date = #{payDate},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="operator != null">operator = #{operator},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtWithdrawalBookById" parameterType="String">
        update ct_withdrawal_book
        set del_flag = '1'
        where id = #{id}
    </delete>

    <delete id="deleteCtWithdrawalBookByIds" parameterType="String">
        update ct_withdrawal_book
        set del_flag = '1'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

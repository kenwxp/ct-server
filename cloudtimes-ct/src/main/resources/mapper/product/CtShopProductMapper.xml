<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.product.mapper.CtShopProductMapper">
    <sql id="selectCtShopProductVo">
        select id,
               shop_no,
               category_id,
               barcode,
               product_name,
               english_name,
               brand,
               label,
               supplier_id,
               supplier,
               specification,
               unit,
               weight,
               color, size, style, purchase_price, retail_price, wholesale_price, vip_price, stock, max_stock, min_stock, picture_url, production_date, quality_period, remarks, is_enable, is_enable_vip_price, is_enable_points, is_deleted, create_time, update_time
        from ct_shop_product
    </sql>

    <select id="selectCtShopProductList" parameterType="CtShopProduct" resultType="CtShopProduct">
        <include refid="selectCtShopProductVo"/>
        <where>
            <if test="shopNo != null  and shopNo != ''">and shop_no = #{shopNo}</if>
            <if test="categoryId != null  and categoryId != ''">and category_id = #{categoryId}</if>
            <if test="barcode != null  and barcode != ''">and barcode = #{barcode}</if>
            <if test="productName != null  and productName != ''">and product_name like concat('%', #{productName},
                '%')
            </if>
            <if test="englishName != null  and englishName != ''">and english_name like concat('%', #{englishName},
                '%')
            </if>
            <if test="brand != null  and brand != ''">and brand = #{brand}</if>
            <if test="label != null  and label != ''">and label = #{label}</if>
            <if test="supplierId != null  and supplierId != ''">and supplier_id = #{supplierId}</if>
            <if test="supplier != null  and supplier != ''">and supplier = #{supplier}</if>
            <if test="specification != null  and specification != ''">and specification = #{specification}</if>
            <if test="unit != null  and unit != ''">and unit = #{unit}</if>
            <if test="weight != null  and weight != ''">and weight = #{weight}</if>
            <if test="color != null  and color != ''">and color = #{color}</if>
            <if test="size != null  and size != ''">and size = #{size}</if>
            <if test="style != null  and style != ''">and style = #{style}</if>
            <if test="purchasePrice != null ">and purchase_price = #{purchasePrice}</if>
            <if test="retailPrice != null ">and retail_price = #{retailPrice}</if>
            <if test="wholesalePrice != null ">and wholesale_price = #{wholesalePrice}</if>
            <if test="vipPrice != null ">and vip_price = #{vipPrice}</if>
            <if test="stock != null ">and stock = #{stock}</if>
            <if test="maxStock != null ">and max_stock = #{maxStock}</if>
            <if test="minStock != null ">and min_stock = #{minStock}</if>
            <if test="pictureUrl != null  and pictureUrl != ''">and picture_url = #{pictureUrl}</if>
            <if test="productionDate != null ">and production_date = #{productionDate}</if>
            <if test="qualityPeriod != null  and qualityPeriod != ''">and quality_period = #{qualityPeriod}</if>
            <if test="remarks != null  and remarks != ''">and remarks = #{remarks}</if>
            <if test="isEnable != null  and isEnable != ''">and is_enable = #{isEnable}</if>
            <if test="isEnableVipPrice != null  and isEnableVipPrice != ''">and is_enable_vip_price =
                #{isEnableVipPrice}
            </if>
            <if test="isEnablePoints != null  and isEnablePoints != ''">and is_enable_points = #{isEnablePoints}</if>
            <if test="isDeleted != null  and isDeleted != ''">and is_deleted = #{isDeleted}</if>
        </where>
    </select>

    <select id="selectCtShopProductById" parameterType="String" resultType="CtShopProduct">
        <include refid="selectCtShopProductVo"/>
        where id = #{id}
    </select>


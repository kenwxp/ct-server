<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.supervise.mapper.CtTaskMapper">
    <sql id="selectCtTaskVo">
        select id, 
               t.store_id,
               t.staff_code,
               t.task_type,
               t.desc_text,
               t.start_time,
               t.end_time,
               t.is_exceptional,
               t.door_log_id,
               t.supervise_area,
               t.state,
               t.create_time,
               t.update_time,
               t.del_flag ,
                s.name store_name,
                s.contact_name,
                s.contact_phone
        from ct_task t left join  ct_store s on t.store_id = s.id
    </sql>

    <select id="selectCtTaskList" parameterType="CtTask" resultType="CtTask">
        <include refid="selectCtTaskVo"/>
        <where>  
            <if test="storeId != null  and storeId != ''"> and t.store_id = #{storeId}</if>
            <if test="staffCode != null  and staffCode != ''"> and t.staff_code = #{staffCode}</if>
            <if test="taskType != null  and taskType != ''"> and t.task_type = #{taskType}</if>
            <if test="descText != null  and descText != ''"> and t.desc_text = #{descText}</if>
            <if test="startTime != null "> and t.start_time = #{startTime}</if>
            <if test="endTime != null "> and t.end_time = #{endTime}</if>
            <if test="isExceptional != null  and isExceptional != ''"> and t.is_exceptional = #{isExceptional}</if>
            <if test="doorLogId != null  and doorLogId != ''"> and t.door_log_id = #{doorLogId}</if>
            <if test="superviseArea != null  and superviseArea != ''"> and t.supervise_area = #{superviseArea}</if>
            <if test="state != null  and state != ''"> and t.state = #{state}</if>
        </where>
    </select>
    
    <select id="selectCtTaskById" parameterType="String" resultType="CtTask">
        <include refid="selectCtTaskVo"/>
        where t.id = #{id}
    </select>
        
    <insert id="insertCtTask" parameterType="CtTask">
        <selectKey keyProperty="id" order="BEFORE" resultType="String">
            select uuid() from dual
        </selectKey>
        insert into ct_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            <if test="storeId != null">store_id,</if>
            <if test="staffCode != null">staff_code,</if>
            <if test="taskType != null">task_type,</if>
            <if test="descText != null">desc_text,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="isExceptional != null">is_exceptional,</if>
            <if test="doorLogId != null">door_log_id,</if>
            <if test="superviseArea != null">supervise_area,</if>
            <if test="state != null">state,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{id},
            <if test="storeId != null">#{storeId},</if>
            <if test="staffCode != null">#{staffCode},</if>
            <if test="taskType != null">#{taskType},</if>
            <if test="descText != null">#{descText},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="isExceptional != null">#{isExceptional},</if>
            <if test="doorLogId != null">#{doorLogId},</if>
            <if test="superviseArea != null">#{superviseArea},</if>
            <if test="state != null">#{state},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateCtTask" parameterType="CtTask">
        update ct_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="storeId != null">store_id = #{storeId},</if>
            <if test="staffCode != null">staff_code = #{staffCode},</if>
            <if test="taskType != null">task_type = #{taskType},</if>
            <if test="descText != null">desc_text = #{descText},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="isExceptional != null">is_exceptional = #{isExceptional},</if>
            <if test="doorLogId != null">door_log_id = #{doorLogId},</if>
            <if test="superviseArea != null">supervise_area = #{superviseArea},</if>
            <if test="state != null">state = #{state},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtTaskById" parameterType="String">
        delete from ct_task where id = #{id}
    </delete>

    <delete id="deleteCtTaskByIds" parameterType="String">
        delete from ct_task where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
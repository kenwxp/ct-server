<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.resources.mapper.CtMediaMapper">
    
    <resultMap type="CtMedia" id="CtMediaResult">
        <result property="id"    column="id"    />
        <result property="linkId"    column="link_id"    />
        <result property="mediaType"    column="media_type"    />
        <result property="fileName"    column="file_name"    />
        <result property="fileSize"    column="file_size"    />
        <result property="saveType"    column="save_type"    />
        <result property="ossLink"    column="oss_link"    />
        <result property="isEnabled"    column="is_enabled"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectCtMediaVo">
        select id, link_id, media_type, file_name, file_size, save_type, oss_link, is_enabled, create_time, update_time, del_flag from ct_media
    </sql>

    <select id="selectCtMediaList" parameterType="CtMedia" resultMap="CtMediaResult">
        <include refid="selectCtMediaVo"/>
        <where>  
            <if test="mediaType != null  and mediaType != ''"> and media_type = #{mediaType}</if>
            <if test="fileName != null  and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
            <if test="saveType != null  and saveType != ''"> and save_type = #{saveType}</if>
            <if test="isEnabled != null  and isEnabled != ''"> and is_enabled = #{isEnabled}</if>
        </where>
    </select>
    
    <select id="selectCtMediaById" parameterType="String" resultMap="CtMediaResult">
        <include refid="selectCtMediaVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCtMedia" parameterType="CtMedia">
        insert into ct_media
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="linkId != null">link_id,</if>
            <if test="mediaType != null">media_type,</if>
            <if test="fileName != null">file_name,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="saveType != null">save_type,</if>
            <if test="ossLink != null">oss_link,</if>
            <if test="isEnabled != null">is_enabled,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="linkId != null">#{linkId},</if>
            <if test="mediaType != null">#{mediaType},</if>
            <if test="fileName != null">#{fileName},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="saveType != null">#{saveType},</if>
            <if test="ossLink != null">#{ossLink},</if>
            <if test="isEnabled != null">#{isEnabled},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateCtMedia" parameterType="CtMedia">
        update ct_media
        <trim prefix="SET" suffixOverrides=",">
            <if test="linkId != null">link_id = #{linkId},</if>
            <if test="mediaType != null">media_type = #{mediaType},</if>
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="saveType != null">save_type = #{saveType},</if>
            <if test="ossLink != null">oss_link = #{ossLink},</if>
            <if test="isEnabled != null">is_enabled = #{isEnabled},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtMediaById" parameterType="String">
        delete from ct_media where id = #{id}
    </delete>

    <delete id="deleteCtMediaByIds" parameterType="String">
        delete from ct_media where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
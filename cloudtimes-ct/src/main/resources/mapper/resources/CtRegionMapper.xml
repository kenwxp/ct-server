<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.resources.mapper.CtRegionMapper">
    
    <resultMap type="CtRegion" id="CtRegionResult">
        <result property="id"    column="id"    />
        <result property="regionName"    column="region_name"    />
        <result property="regionShortName"    column="region_short_name"    />
        <result property="regionCode"    column="region_code"    />
        <result property="regionParentCode"    column="region_parent_code"    />
        <result property="regionLevel"    column="region_level"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectCtRegionVo">
        select id, region_name, region_short_name, region_code, region_parent_code, region_level, create_time, update_time, del_flag from ct_region
    </sql>

    <select id="selectCtRegionList" parameterType="CtRegion" resultMap="CtRegionResult">
        <include refid="selectCtRegionVo"/>
        <where>  
            <if test="regionName != null  and regionName != ''"> and region_name like concat('%', #{regionName}, '%')</if>
            <if test="regionShortName != null  and regionShortName != ''"> and region_short_name like concat('%', #{regionShortName}, '%')</if>
            <if test="regionCode != null  and regionCode != ''"> and region_code = #{regionCode}</if>
            <if test="regionLevel != null  and regionLevel != ''"> and region_level = #{regionLevel}</if>
        </where>
    </select>
    
    <select id="selectCtRegionById" parameterType="Long" resultMap="CtRegionResult">
        <include refid="selectCtRegionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCtRegion" parameterType="CtRegion" useGeneratedKeys="true" keyProperty="id">
        insert into ct_region
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="regionName != null">region_name,</if>
            <if test="regionShortName != null">region_short_name,</if>
            <if test="regionCode != null">region_code,</if>
            <if test="regionParentCode != null">region_parent_code,</if>
            <if test="regionLevel != null">region_level,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="regionName != null">#{regionName},</if>
            <if test="regionShortName != null">#{regionShortName},</if>
            <if test="regionCode != null">#{regionCode},</if>
            <if test="regionParentCode != null">#{regionParentCode},</if>
            <if test="regionLevel != null">#{regionLevel},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateCtRegion" parameterType="CtRegion">
        update ct_region
        <trim prefix="SET" suffixOverrides=",">
            <if test="regionName != null">region_name = #{regionName},</if>
            <if test="regionShortName != null">region_short_name = #{regionShortName},</if>
            <if test="regionCode != null">region_code = #{regionCode},</if>
            <if test="regionParentCode != null">region_parent_code = #{regionParentCode},</if>
            <if test="regionLevel != null">region_level = #{regionLevel},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCtRegionById" parameterType="Long">
        delete from ct_region where id = #{id}
    </delete>

    <delete id="deleteCtRegionByIds" parameterType="String">
        delete from ct_region where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
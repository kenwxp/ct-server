<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudtimes.agent.mapper.CtAgentActivityRelMapper">
    
    <sql id="selectCtAgentActivityRelVo">
        select * from ct_agent_activity_rel
    </sql>

    <select id="selectCtAgentActivityRelList" parameterType="CtAgentActivityRel" resultMap="CtAgentActivityRelResult">
        <include refid="selectCtAgentActivityRelVo"/>
        <where>  
            <if test="activityType != null  and activityType != ''"> and activity_type = #{activityType}</if>
        </where>
    </select>
    
    <select id="selectCtAgentActivityRelByActivityId" parameterType="String" resultMap="CtAgentActivityRelResult">
        <include refid="selectCtAgentActivityRelVo"/>
        where activity_id = #{activityId}
    </select>
        
    <insert id="insertCtAgentActivityRel" parameterType="CtAgentActivityRel">
        insert into ct_agent_activity_rel
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="activityId != null">activity_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="activityType != null and activityType != ''">activity_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="activityId != null">#{activityId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="activityType != null and activityType != ''">#{activityType},</if>
         </trim>
    </insert>

    <update id="updateCtAgentActivityRel" parameterType="CtAgentActivityRel">
        update ct_agent_activity_rel
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="activityType != null and activityType != ''">activity_type = #{activityType},</if>
        </trim>
        where activity_id = #{activityId}
    </update>

    <delete id="deleteCtAgentActivityRelByActivityId" parameterType="String">
        delete from ct_agent_activity_rel where activity_id = #{activityId}
    </delete>

    <delete id="deleteCtAgentActivityRelByActivityIds" parameterType="String">
        delete from ct_agent_activity_rel where activity_id in 
        <foreach item="activityId" collection="array" open="(" separator="," close=")">
            #{activityId}
        </foreach>
    </delete>
</mapper>